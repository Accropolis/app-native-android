<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="false"
    >

    <TextView
        android:id="@+id/tv_nextlive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Prochain live"
        android:textColor="@color/colorAccropolis"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_live"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:text="Calendrier"
        android:textColor="@color/colorAccropolis"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="mercredi 15h"
        android:textColor="@color/colorAccropolis"
        android:textSize="17sp"
        android:textStyle="italic|bold"
        android:layout_marginTop="20px" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_live"
        android:layout_marginBottom="20px"
        android:background="?android:attr/selectableItemBackground">

        <fr.accropolis.teamdev.accropolis.tools.smartimage.SmartImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_image"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            />


        <LinearLayout
            android:id="@+id/ll_text"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"

            >

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/black"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date_next_live"
                android:textColor="@android:color/white"
                android:gravity="center_vertical|center_horizontal"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>