<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.accropolis.teamdev.accropolis.controller.About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.4"
            android:gravity="center_horizontal"
            android:text="Vivez l'expÃ¨rience Accropolis!"
            android:textColor="@color/colorAccropolis"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_URI"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_below="@+id/tv_title"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/accropolisban" />

            <TextView
                android:id="@+id/tv_uri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="http://accropolis.fr/"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_yt_twitch"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ll_URI"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_youtube"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@mipmap/ic_youtube" />

                <TextView
                    android:id="@+id/tv_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:gravity="center_horizontal"
                    android:text="Youtube"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_twitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_twitch"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@mipmap/ic_twitch" />

                <TextView
                    android:id="@+id/tv_twitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:gravity="center_horizontal"
                    android:text="Twitch"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_fb_twitter"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ll_URI"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@mipmap/ic_facebook" />

                <TextView
                    android:id="@+id/tv_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:gravity="center_horizontal"
                    android:text="Facebook"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_twitter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.05"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@mipmap/ic_twitter" />

                <TextView
                    android:id="@+id/tv_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:gravity="center_horizontal"
                    android:text="Twitch"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_autre"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_below="@+id/ll_snapchat"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_snapchat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_snapchat"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@mipmap/ic_snapchat" />

                <TextView
                    android:id="@+id/tv_snapchat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:gravity="center_horizontal"
                    android:text="Snapchat"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_instagram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@mipmap/ic_instagram" />

                <TextView
                    android:id="@+id/tv_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:text="Instagram"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.00"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_discord"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@mipmap/ic_discord" />

                <TextView
                    android:id="@+id/tv_discord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:gravity="center_horizontal"
                    android:text="Discord"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
